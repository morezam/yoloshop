{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"rootDir": "./",
		"esModuleInterop": true,
		"outDir": "dist",
		"moduleResolution": "node",
		"baseUrl": "./",
		"paths": {
			"@controllers/*": ["backend/controllers/*"],
			"@middleware/*": ["backend/middleware/*"],
			"@models/*": ["backend/models/*"],
			"@utils/*": ["backend/utils/*"],
			"@routes/*": ["backend/routes/*"],
			"@types": ["./frontend/types"]
		}
	},
	"include": ["backend"],
	"exclude": ["node_modules", "frontend"]
}
