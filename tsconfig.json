{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"rootDir": "./",
		"esModuleInterop": true,
		"moduleResolution": "node",
		"baseUrl": "backend",
		"paths": {
			"@controllers/*": ["controllers/*"],
			"@middleware/*": ["middleware/*"],
			"@models/*": ["models/*"],
			"@utils/*": ["utils/*"],
			"@routes/*": ["routes/*"]
		}
	},
	"include": ["backend"],
	"exclude": ["node_modules", "frontend"]
}
