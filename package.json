{
	"name": "yoloshop",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"nodemonConfig": {
		"ignore": [
			".git",
			"node_modules"
		],
		"watch": [
			"backend"
		],
		"exec": "node -r tsconfig-paths/register -r ts-node/register ./backend/server.ts",
		"ext": "ts, js"
	},
	"scripts": {
		"client": "npm run dev --prefix frontend",
		"server": "nodemon",
		"dev": "concurrently \"npm run server\" \"npm run client\" ",
		"builserver": "rimraf dist && tsc --project tsconfig.json && tsc-alias -p tsconfig.json",
		"build": "npm run front && npm run builserver",
		"start": "node ./dist/backend/server.js",
		"front": "npm install --prefix frontend && npm run build --prefix frontend"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"dependencies": {
		"bcryptjs": "^2.4.3",
		"cors": "^2.8.5",
		"dotenv": "^16.0.3",
		"express": "^4.18.2",
		"jsonwebtoken": "^8.5.1",
		"mongoose": "^6.7.2",
		"multer": "^1.4.5-lts.1",
		"nodemailer": "^6.8.0",
		"rimraf": "^3.0.2",
		"tsconfig-paths": "^4.1.0"
	},
	"devDependencies": {
		"@types/bcryptjs": "^2.4.2",
		"@types/cors": "^2.8.12",
		"@types/express": "^4.17.14",
		"@types/jsonwebtoken": "^8.5.9",
		"@types/multer": "^1.4.7",
		"@types/node": "^18.11.9",
		"@types/nodemailer": "^6.4.6",
		"concurrently": "^7.6.0",
		"nodemon": "^2.0.20",
		"ts-node": "^10.9.1",
		"tsc-alias": "^1.8.2",
		"typescript": "^4.8.4"
	}
}
